{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "target": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "importsNotUsedAsValues": "error",
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2017",
      "es2015"
    ],
  },
  "include": [
    "src",
    "routes",
    "server.ts"
  ]
}